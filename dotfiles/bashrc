#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto --block-size=M'
alias ll='ls -l'
alias grep='grep --color=auto'

# change bash prompt
PS1='\[\033[0;34m\]\u \W > \[\033[00m\]'

# use threading in make
export MAKEFLAGS='-j2'

# check sudo commands for aliases
alias sudo='sudo '

# Change default editor to vim.
export EDITOR=vim

# export gopath
export GOPATH=$HOME/gopath
export PATH=$GOPATH:$GOPATH/bin:$PATH

# add user-specific path
export PATH=$HOME/.local/bin:$PATH

# Solarized colors in console
source ~/Stuff/linux-config/custom-config/solarized_dark

# visual bell
set bell-style visible

# Shortcut for git
alias g='git '

# The next line updates PATH for the Google Cloud SDK.
if [ -f /home/katie/Downloads/google-cloud-sdk/path.bash.inc ]; then
  source '/home/katie/Downloads/google-cloud-sdk/path.bash.inc'
fi

# The next line enables shell command completion for gcloud.
if [ -f /home/katie/Downloads/google-cloud-sdk/completion.bash.inc ]; then
  source '/home/katie/Downloads/google-cloud-sdk/completion.bash.inc'
fi

# Source ssh_find_agent script and start ssh-agent if not running
. ~/linux-config/scripts/ssh-find-agent/ssh-find-agent.sh
ssh-find-agent -a || eval $(ssh-agent) > /dev/null
# added by Anaconda3 5.3.1 installer
# >>> conda init >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$(CONDA_REPORT_ERRORS=false '/home/katie/anaconda3/bin/conda' shell.bash hook 2> /dev/null)"
if [ $? -eq 0 ]; then
    \eval "$__conda_setup"
else
    if [ -f "/home/katie/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/katie/anaconda3/etc/profile.d/conda.sh"
        CONDA_CHANGEPS1=false conda activate base
    else
        \export PATH="/home/katie/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda init <<<
