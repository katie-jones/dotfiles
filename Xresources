!----------------------------------
!------------- urxvt --------------
!----------------------------------

! solarized
#include ".Xresources.d/solarized.light"
URxvt.intensityStyles: 0

! no scroll bar
URxvt.scrollBar: 0

! perl
URxvt.perl-ext-common: tabbed,clipboard,url-select,keyboard-select,fullscreen,resize-font
URxvt.ur-select.launcher: opera
URxvt.url-select.underline: true

! tab colors
URxvt.tabbed.tabbar-fg: 6
URxvt.tabbed.tabbar-bg: 15
URxvt.tabbed.tab-fg: 15
URxvt.tabbed.tab-bg: 6

! Font
URxvt.font: xft:inconsolata:pixelsize=15

! Key bindings
URxvt.keysym.F11: fullscreen:switch
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.resize-font.reset: C-equal

