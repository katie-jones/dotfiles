!----------------------------------
!------------- urxvt --------------
!----------------------------------

! solarized
#include ".Xresources.d/solarized.light"
URxvt.intensityStyles: 0

! no scroll bar
URxvt.scrollBar: 0

! perl
URxvt.perl-ext-common: tabbed,clipboard,url-select,keyboard-select,fullscreen,resize-font
URxvt.ur-select.launcher: opera
URxvt.url-select.underline: true


! Font
URxvt.font: xft:inconsolata:size=14

! Key bindings
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.resize-font.reset: C-equal

! Turn off annoying C-S keybindings
URxvt*iso14755: false
URxvt*iso14755_52: false

