!----------------------------------
!------------- urxvt --------------
!----------------------------------

! solarized
#include ".Xresources.d/solarized.dark"
URxvt.intensityStyles: 0

! no scroll bar
URxvt.scrollBar: 0

! perl
URxvt.perl-ext-common: tabbedex,clipboard,url-select,keyboard-select,fullscreen,resize-font
URxvt.ur-select.launcher: chromium
URxvt.url-select.underline: true

! tabs
URxvt.tabbed.autohide: true

! Font
URxvt.font: xft:inconsolata:size=14

! Key bindings
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.resize-font.reset: C-equal

! Turn off annoying C-S keybindings
URxvt*iso14755: false
URxvt*iso14755_52: false

! Add urxvt icon
URxvt.iconFile: /usr/share/icons/deepin/apps/scalable/terminator.svg

sleep 10
source ~/.Xresources.d/50-synaptics.conf
